・全期間の平均客単価（１回の注文総額の平均）

select
	round(avg(amount), 0)
from
	orders;


・月別の平均客単価

select
	date_format(order_time, '%Y%m') 年月,
	round(avg(amount), 0) 平均単価
from
	orders
group by
	date_format(order_time, '%Y%m')
order by 年月;

・都道府県別平均客単価

select
	p.id id,
    p.name 都道府県名,
    round(avg(o.amount), 0) 平均単価
from
	orders o
inner join
	users u
on o.user_id = u.id
inner join
	prefectures p
on u.prefecture_id = p.id
group by
	p.id
order by id;

・都道府県別、月別平均客単価

select
	pf.id id,
    pf.name 都道府県名,
    date_format(o.order_time, '%Y%m') 年月,
    round(avg(o.amount), 0) 平均単価
from
	orders o
inner join 
	users u
on o.user_id = u.id
inner join 
	prefectures pf
on u.prefecture_id = pf.id
group by
	pf.id, 年月
order by id, 年月;
